{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // chuyển true thành false để build ra file js
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // thay đổi từ bundler thành node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Thay đổi preserve thành react-jsx cho Next.js
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
